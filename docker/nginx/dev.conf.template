server {
    listen 80;
    server_name _;
    server_tokens off;

    client_max_body_size 20M;

    location / {
        proxy_set_header Host $host;
        proxy_pass http://backend:8080;
    }

    location /blog {
        proxy_set_header Host $host;
        proxy_pass http://backend:3000/blog;
    }

    location ~ /storage/(.+) {
        resolver 8.8.8.8;
        proxy_pass https://${AZURE_STORAGE_ACCOUNT}.blob.core.windows.net/results/$1$http_azure_sas;
    }

    location /api {
        proxy_set_header Host $host;
        proxy_pass http://backend:3000/api;
    }

    location /admin {
        proxy_set_header Host $host;
        proxy_pass http://backend:3000/admin;
    }

}
